@using Umbraco.Core.PropertyEditors
@inherits UmbracoViewPage
@using Umbraco.Forms.Mvc
@{
    Layout = null;
    // Get basic design settings from the homepage
    var home = (HomePage)Model.Root();
	var favicon = home.FaviconImage;
	var headerRoot = home.CustomHeaderBanner;
    // var font = home.Font;
    // var colorTheme = home.ColorTheme;
}

<!doctype html>
<html>
<head>
	@Html.RenderUmbracoFormDependencies()
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>@Model.Value("titlePageUtama") | Pertamina Rosneft Pengolahan & Petrokimia</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="page-number" content="@Model.Value("pageNumber")">
	
	<link rel="icon" type="image/x-icon" href="@favicon.Url()">
    
    <link rel="stylesheet" href="@Url.Content("~/css/style41.css")" />
	<link rel="stylesheet" href="@Url.Content("~/css/bootstrap.css")" />
	<link rel="stylesheet" href="@Url.Content("~/css/CustomRichTextEditor.css")" />
	<script src="https://www.google.com/recaptcha/api.js" defer></script>

	<!-- === font awesome === -->
	<script src="https://kit.fontawesome.com/e25a17455c.js" crossorigin="anonymous"></script>

	<!-- === JQuery ===  -->
	<script src="https://code.jquery.com/jquery-3.6.1.js"
		integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>

	<!-- === GSAP JS === -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.1/gsap.min.js"></script>

	<!-- === Swiper CSS === -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />

	<!-- === Swiper JS === -->
	<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>

	<!-- === AOS CSS === -->
	<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

	<!-- === AOS JS === -->
	<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

	<!-- === POPPER JS === -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
		integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous">
		</script>
		
</head>

<body class="frontpage">
	
	@Html.Partial("~/Views/Partials/navbar.cshtml")
	<div class="header-banner">
	@if(headerRoot != null){
		<img src="@headerRoot.Url()" class="header-root">
	}else{
		<img src="/images/header-root-transparent-2.png" class="header-root">
		<img src="/images/header-burung.png" class="header-burung">
		<img src="/images/header-awan.png" class="header-awan">
		<img src="/images/header-awan-kecil.png" class="header-awan-kecil">
		<img src="/images/header-truk.png" class="header-truk">
	}
		
	</div>
    <main>
        @RenderBody()
    </main>
	
	@Html.Partial("~/Views/Partials/footer.cshtml")
	
	

	<a onclick="naikKeAtas()" id="tombol-naik" style="display: none;">
		<div class="arrow-up">
			<i class="fa-solid fa-chevron-up"></i>
		</div>
	</a>

    <script type="text/javascript" src="/scripts/bootstrap.js"></script>

	<script type="text/javascript" src="/scripts/script8.js"></script>

	<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.0.0.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>


</body>

</html>